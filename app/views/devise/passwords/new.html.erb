<div class="container text-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {:class => 'form-signin', method: :post}) do |f| %>
  	<%= render "devise/shared/error_messages", resource: resource %>
    <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>
    <div class="field">
      <%= f.label :email, class: 'sr-only' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email address"  %>
    </div>
    </br>
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'class="btn btn-lg btn-primary btn-block' %>
    </div>
     <p class="mt-5 mb-3 text-muted">&copy; 2017-2019</p>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

