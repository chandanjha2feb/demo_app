<div class="container text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <div class="field">
      <%= f.label :email, class: 'sr-only' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email address"  %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'sr-only' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <%= f.check_box :remember_me, style: "margin: 0 !important" %> <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'class="btn btn-lg btn-primary btn-block' %>
    </div>
     <p class="mt-5 mb-3 text-muted">&copy; 2017-2019</p>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
